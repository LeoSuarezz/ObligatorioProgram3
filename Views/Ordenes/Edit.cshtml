@model ObligatorioProgram3.Models.Ordene

@{
    ViewData["Title"] = "Edit";
}

<h2>Ordenes > editar</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Idreserva" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <select asp-for="Idreserva" class="form-control" asp-items="ViewBag.Idreserva"></select>
                </div>
                <span asp-validation-for="Idreserva" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Total" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="Total" class="form-control" />
                </div>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input style="width:max-content"
                       type="submit" value="Guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
