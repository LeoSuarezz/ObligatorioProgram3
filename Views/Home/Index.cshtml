<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObligatorioProgram3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>

        body {
            font-family: Astrid;
            transition: background-color .5s;
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow-x: hidden;
        }

        .background-image {
            background-image: url('/imagenes/fondo.webp');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }


        .title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #7B7B7B;
        }

        .subtitle {
            color: #6c757d;
            font-size: 1.125rem;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 16px;
        }

        .btn-custom {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: 40px;
            padding: 0 24px;
            font-size: 0.875rem;
            font-weight: medium;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-primary-custom {
            background-color: #7B7B7B;
            color: white;
            border: none;
        }

            .btn-primary-custom:hover {
                background-color: #535353;
            }

        .btn-secondary-custom {
            background-color: white;
            color: #535353;
            border: 1px solid #ced4da;
        }

            .btn-secondary-custom:hover {
                background-color: #e9ecef;
                color: #535353;
            }

        .login-button {
            position: absolute;
            top: 16px;
            right: 16px;
        }

            .login-button a {
                background-color: #f2ce54;
                color: black;
                border: 1px solid;
                padding: 8px 16px;
                border-radius: 8px;
                text-decoration: none;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .login-button a:hover {
                    background-color: black;
                    color: white;
                }

        .container {
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            cursor: pointer;
            margin: 0 auto;
            display: inline-block;
        }

        .bar1, .bar2, .bar3 {
            width: 35px;
            height: 5px;
            color: white;
            margin: 6px 0;
            transition: 0.4s;
        }

        .menuIcon {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .menuIcon:hover {
                .bar1, .bar2, .bar3

        {
            background-color: rgba(242, 206, 84);
        }

        }

        .change .bar1 {
            background-color: black;
            transform: translate(0, 11px) rotate(-45deg);
        }

        .change .bar2 {
            background-color: black;
            opacity: 0;
        }

        .change .bar3 {
            background-color: black;
            transform: translate(0, -11px) rotate(45deg);
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: rgba(242, 206, 84);
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 50px 32px;
                text-decoration: none;
                font-size: 30px;
                color: black;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: white;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
        }

        .menuIcon {
            position: absolute;
            top: 16px;
            left: 16px;
            cursor: pointer;
            z-index: 2;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            width: 50px;
            height: 50px;
        }

        .logo3 {
            border-radius: 5%;
            width: 300px;
            height: auto;
            margin: 0 auto 20px;
        }

        .tables {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
        }

        .card {
            margin: 10px;
            padding: 20px;
            width: 200px;
            border: 1px solid #ccc;
            cursor: pointer;
        }

        .card-body {
            text-align: center;
        }

        .card-title {
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .menu {
            display: block;
            margin-top: 20px;
            background-color: rgba(242, 206, 84);
        }

        .categorias {
            display: flex;
            justify-content: space-between;
        }

        h3 {
            display: block;
            width: 10%;
            text-align: center;
            justify-content: center;
        }

