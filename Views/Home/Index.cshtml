@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObligatorioProgram3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: Astrid;
            transition: background-color .5s;
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow-x: hidden;
        }

        .background-image {
            background-image: url('/imagenes/fondo.webp');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #7B7B7B;
        }

        .subtitle {
            color: #6c757d;
            font-size: 1.125rem;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 16px;
        }

        .btn-custom {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: 40px;
            padding: 0 24px;
            font-size: 0.875rem;
            font-weight: medium;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-primary-custom {
            background-color: #7B7B7B;
            color: white;
            border: none;
        }

            .btn-primary-custom:hover {
                background-color: #535353;
            }

        .btn-secondary-custom {
            background-color: white;
            color: #535353;
            border: 1px solid #ced4da;
        }

            .btn-secondary-custom:hover {
                background-color: #e9ecef;
                color: #535353;
            }

        .login-button {
            position: absolute;
            top: 16px;
            right: 16px;
        }

            .login-button a {
                background-color: #f2ce54;
                color: black;
                border: 1px solid;
                padding: 8px 16px;
                border-radius: 8px;
                text-decoration: none;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .login-button a:hover {
                    background-color: black;
                    color: white;
                }

        .menuIcon {
            position: fixed;
            top: 16px;
            left: 16px;
            cursor: pointer;
            z-index: 2;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            width: 50px;
            height: 50px;
        }

            .menuIcon div {
                width: 35px;
                height: 5px;
                margin: 6px 0;
                background-color: white;
                transition: 0.4s;
            }

        .change .bar1 {
            background-color: black;
            transform: translate(0, 11px) rotate(-45deg);
        }

        .change .bar2 {
            background-color: black;
            opacity: 0;
        }

        .change .bar3 {
            background-color: black;
            transform: translate(0, -11px) rotate(45deg);
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: rgba(242, 206, 84);
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 50px 32px;
                text-decoration: none;
                font-size: 30px;
                color: black;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: white;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
        }

        .container {
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            cursor: pointer;
            margin: 0 auto;
            display: inline-block;
        }

        .logo3 {
            border-radius: 5%;
            width: 300px; /* Ajusta el tamaño según sea necesario */
            height: auto;
            margin: 0 auto 20px; /* Centrado horizontal y margen inferior */
        }

        .category-bar {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin: 20px 0;
        }

            .category-bar a {
                text-decoration: none;
                color: black;
                font-size: 1.2rem;
                padding: 8px 16px;
                border-radius: 8px;
                background-color: #f2ce54;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .category-bar a:hover {
                    background-color: black;
                    color: white;
                }

        .menu-items {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 16px;
        }

            .menu-items .card {
                width: 18rem;
                border: 1px solid #ccc;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                overflow: hidden;
            }

                .menu-items .card img {
                    width: 100%;
                    height: 12rem;
                    object-fit: cover;
                }

            .menu-items .card-body {
                padding: 16px;
            }

            .menu-items .card-title {
                font-size: 1.25rem;
                margin-bottom: 8px;
            }

            .menu-items .card-text {
                font-size: 1rem;
                margin-bottom: 8px;
            }

            .menu-items .card-price {
                font-size: 1rem;
                color: #535353;
            }
    </style>
</head>
<body>
    <div class="menuIcon" onclick="toggleMenu(this)">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </div>

    <div id="mySidenav" class="sidenav">
        <a href="#menu">Menú</a>
        <a href="@Url.Action("Index", "Resenas")">Reseñas</a>
        <a href="#">Acerca de Nosotros</a>
    </div>

    <div id="main">
        <div class="background-image">
            <div class="login-button">
                <a href="@Url.Action("IniciarSesion", "Inicio")">Iniciar Sesión</a>
            </div>
            <div class="container">
                <img src="imagenes/AlMalTiempoBuenaCaraLogo.png" alt="Logo" class="logo3">
            </div>
            <div class="title">¡Bienvenidos a Al Mal Tiempo Buena Cara!</div>
            <div class="subtitle">Disfruta de nuestros deliciosos platos y bebidas</div>
            <div class="button-group">
                <a href="#menu" class="btn-custom btn-primary-custom">Ver Menú</a>
                <a href="@Url.Action("AboutUs", "Home")" class="btn-custom btn-secondary-custom">Acerca de Nosotros</a>
            </div>
        </div>

        <!-- Categorías -->
        <div class="category-bar">
            @foreach (var categoria in ViewBag.Categorias)
            {
                <a href="#menu" class="category-link" data-category="@categoria">@categoria</a>
            }
        </div>

        <!-- Menú -->
        <div id="menu" class="menu-items">
            @foreach (var item in ViewBag.MenuItems)
            {
                <div class="card" data-category="@item.Categoria">
                    <img src="@item.RutaImagen" class="card-img-top" alt="@item.NombrePlato">
                    <div class="card-body">
                        <h5 class="card-title">@item.NombrePlato</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="card-price">@item.Precio</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        function toggleMenu(x) {
            x.classList.toggle("change");
            var menu = document.getElementById("mySidenav");
            if (menu.style.width === "250px") {
                menu.style.width = "0";
                document.getElementById("main").style.marginLeft = "0";
            } else {
                menu.style.width = "250px";
                document.getElementById("main").style.marginLeft = "250px";
            }
        }

        document.querySelectorAll('.category-link').forEach(link => {
            link.addEventListener('click', function () {
                const category = this.getAttribute('data-category');
                document.querySelectorAll('.card').forEach(card => {
                    if (card.getAttribute('data-category') === category || category === 'All') {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
