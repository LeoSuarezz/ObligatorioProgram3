@model ObligatorioProgram3.Models.Menu

@{
    ViewData["Title"] = "Edit";
}

<h2>Menu > editar</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="NombrePlato" class="form-control" />
                </div>
                <span asp-validation-for="NombrePlato" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="Descripcion" class="form-control" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="Precio" class="form-control" />
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Categoria" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <select asp-for="Categoria" class="form-control">
                        <option value="Entradas">Entradas</option>
                        <option value="Principal">Principal</option>
                        <option value="Postres">Postres</option>
                        <option value="Bebidas">Bebidas</option>
                    </select>
                </div>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RutaImagen" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="RutaImagen" class="form-control" />
                </div>
                <span asp-validation-for="RutaImagen" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input style="width:max-content"
                       type="submit" value="Guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
