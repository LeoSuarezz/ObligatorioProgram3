@model ObligatorioProgram3.Models.Rol

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rol</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="NombreRol" class="control-label"></label>
                <input asp-for="NombreRol" class="form-control" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Permisos:</label><br />
                @foreach (var permiso in ViewBag.Permisos as List<ObligatorioProgram3.Models.Permiso>)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="permiso-@permiso.Id" name="permisosSeleccionados" value="@permiso.Id" @(Model.IdPermisos.Any(p => p.Id == permiso.Id) ? "checked" : "")>
                        <label class="form-check-label" for="permiso-@permiso.Id">
                            @permiso.Nombre
                        </label>
                    </div>
                }
                <span class="text-danger" id="errorPermisos"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
