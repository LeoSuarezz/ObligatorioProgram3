@model ObligatorioProgram3.Models.Rol

<div class="modal-header">
    <h5 class="modal-title" id="crearRolModalLabel">Añadir Rol</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="crearRolForm" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="NombreRol" class="control-label"></label>
            <input asp-for="NombreRol" class="form-control" />
            <span asp-validation-for="NombreRol" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Permisos:</label><br />
            @foreach (var permiso in ViewBag.Permisos as List<ObligatorioProgram3.Models.Permiso>)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="permiso-@permiso.Id" name="permisosSeleccionados" value="@permiso.Id">
                    <label class="form-check-label" for="permiso-@permiso.Id">
                        @permiso.Nombre
                    </label>
                </div>
            }
            <span class="text-danger" id="errorPermisos"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-dark" />
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#crearRolForm').submit(function (e) {
                e.preventDefault();

                // Obtener los IDs de los permisos seleccionados
                var permisosSeleccionados = $('input[name="permisosSeleccionados"]:checked').map(function () { // Se corrigió el selector del nombre del campo
                    return $(this).val();
                }).get();

                // Agregar los IDs seleccionados como un campo oculto al formulario
                $('<input>').attr({
                    type: 'hidden',
                    name: 'permisosSeleccionados', // Se corrigió el nombre del campo
                    value: permisosSeleccionados.join(',') // Convertir a cadena separada por comas
                }).appendTo('#crearRolForm');

                // Enviar el formulario
                this.submit();
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }