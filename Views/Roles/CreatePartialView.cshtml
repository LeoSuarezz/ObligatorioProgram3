@model ObligatorioProgram3.Models.Rol

<div class="modal-header">
    <h5 class="modal-title" id="crearRolModalLabel">Añadir Rol</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="crearRolForm" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NombreRol" class="control-label"></label>
            <input asp-for="NombreRol" class="form-control" />
            <span asp-validation-for="NombreRol" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Permisos" class="control-label"></label>
            <select asp-for="Permisos" class="form-control" asp-items="ViewBag.Permisos"></select>
            <span asp-validation-for="Permisos" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-dark" />
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
