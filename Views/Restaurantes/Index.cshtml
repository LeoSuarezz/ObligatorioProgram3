@model IEnumerable<ObligatorioProgram3.Models.Restaurante>
@{
    ViewData["Title"] = "Index";
}

<h2>Restaurantes</h2>

<div class="container-fluid">
    <table class="table table-striped">
        <thead>
            <tr>

                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurante in Model)
            {
                <tr>

                    <td>@restaurante.Nombre</td>
                    <td>@restaurante.Direccion</td>
                    <td>@restaurante.Telefono</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@restaurante.Id">Editar</a>
                        <a asp-action="Details" asp-route-id="@restaurante.Id">Detalle</a>
                        <a asp-action="Delete" asp-route-id="@restaurante.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-dark" id="abrirModalRestaurante">
        + nuevo restaurante
    </button>
</div>

   

<div class="modal fade" id="crearRestauranteModal" tabindex="-1" role="dialog" aria-labelledby="crearRestauranteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="crearRestauranteModalContent">
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#abrirModalRestaurante').click(function () {
                $.ajax({
                    url: '@Url.Action("CreatePartial", "Restaurantes")',
                    type: 'GET',
                    success: function (data) {
                        $('#crearRestauranteModalContent').html(data);
                        $('#crearRestauranteModal').modal('show');
                    }
                });
            });

            // Manejar el submit del formulario dentro del modal
            $('#crearRestauranteModalContent').on('submit', '#crearRestauranteForm', function (e) {
                e.preventDefault(); // Evitar el envío normal del formulario

                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (data) {
                        $('#crearRestauranteModal').modal('hide'); // Cerrar el modal
                        location.reload(); // Recargar la página para actualizar la lista de usuarios
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                        // Manejar el error si es necesario
                    }
                });
            });
        });
    </script>


}