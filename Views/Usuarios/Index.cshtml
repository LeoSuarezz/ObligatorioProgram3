@model IEnumerable<ObligatorioProgram3.Models.Usuario>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <h2>Usuarios</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Apellido</td>
                    <td>@usuario.Email</td>
                 
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-dark" id="abrirModalUsuario">
        + nuevo usuario
    </button>
</div>

<div class="modal fade" id="crearUsuarioModal" tabindex="-1" role="dialog" aria-labelledby="crearUsuarioModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="createUserModalContent">
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#abrirModalUsuario').click(function () {
                $.ajax({
                    url: '@Url.Action("CreatePartial", "Usuarios")',
                    type: 'GET',
                    success: function (data) {
                        $('#createUserModalContent').html(data);
                        $('#crearUsuarioModal').modal('show');
                    }
                });
            });

            // Manejar el submit del formulario dentro del modal
            $('#createUserModalContent').on('submit', '#createUsuarioForm', function (e) {
                e.preventDefault(); // Evitar el envío normal del formulario

                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (data) {
                        $('#crearUsuarioModal').modal('hide'); // Cerrar el modal
                        location.reload(); // Recargar la página para actualizar la lista de usuarios
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                        // Manejar el error si es necesario
                    }
                });
            });
        });
    </script>
}
