@model ObligatorioProgram3.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h2>Reservas > Editar</h2>

<div class="row">
    <div class="col-md-6">
        <form id="editReservaForm" asp-action="Edit" class="p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label class="form-label">Restaurante</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input type="text" class="form-control" value="@Model.IdmesaNavigation.IdrestauranteNavigation.Nombre" readonly />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Idcliente" class="form-label">Seleccionar Cliente</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <select asp-for="Idcliente" class="form-control" asp-items="ViewBag.Idcliente"></select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Idmesa" class="form-label">Seleccionar Mesa</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <select asp-for="Idmesa" class="form-control" asp-items="ViewBag.Idmesa"></select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="FechaReserva" class="form-label">Fecha de Reserva</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <input asp-for="FechaReserva" class="form-control" type="date" readonly />
                    <span asp-validation-for="FechaReserva" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Estado</label>
                <div class="input-group">
                    <span class="input-group-text"></span>
                    <select asp-for="Estado" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="Confirmada">Confirmada</option>
                        <option value="Cancelada">Cancelada</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="d-grid">
                <input type="submit" value="Guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
